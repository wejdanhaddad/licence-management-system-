{% extends 'base.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-primary fw-bold">Liste des Catégories</h1>
        <a href="{{ path('app_category_new') }}" class="btn btn-custom">
            Ajouter une Catégorie
        </a>
    </div>

    <div class="card p-4 shadow-sm rounded-3 border-0">
        <table class="table table-hover align-middle">
            <thead class="table-header">
                <tr>
                    <th>ID</th>
                    <th>Titre</th>
                    <th>Description</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for category in categories %}
                    <tr class="table-row">
                        <td><span class="badge bg-custom">{{ category.id }}</span></td>
                        <td class="fw-semibold">{{ category.titre }}</td>
                        <td>{{ category.description }}</td>
                        <td class="text-center">
                            <a href="{{ path('app_category_show', {'id': category.id}) }}" class="btn btn-outline-custom btn-sm">
                                Voir
                            </a>
                            <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-outline-custom btn-sm">
                                Modifier
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="text-center text-muted">Aucune catégorie trouvée</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

<style>
    :root {
        --primary-color: #2C7DA0; /* Bleu doux */
        --secondary-color: #2A9D8F; /* Vert doux */
        --hover-color: #1E6A85; /* Bleu foncé */
        --light-gray: #f8f9fa;
    }

    .table-header {
        background-color: var(--light-gray);
        font-weight: bold;
    }

    .table-row:hover {
        background-color: #f1f3f5 !important;
        transition: background-color 0.3s ease;
    }

    .btn-custom {
        background-color: var(--primary-color);
        color: white;
        border-radius: 10px;
        padding: 8px 16px;
        transition: all 0.3s ease-in-out;
        text-decoration: none;
    }

    .btn-custom:hover {
        background-color: var(--hover-color);
        transform: scale(1.05);
    }

    .btn-outline-custom {
        border: 1px solid var(--secondary-color);
        color: var(--secondary-color);
        border-radius: 10px;
        transition: all 0.3s ease-in-out;
    }

    .btn-outline-custom:hover {
        background-color: var(--secondary-color);
        color: white;
    }

    .badge.bg-custom {
        background-color: var(--secondary-color);
        color: white;
        font-size: 0.9rem;
        padding: 5px 10px;
        border-radius: 8px;
    }

    .card {
        border-radius: 10px;
        overflow: hidden;
    }
</style>
{% endblock %}
