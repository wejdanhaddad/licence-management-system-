{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <h1>Produit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ produit.name }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ produit.image }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.description }}</td>
            </tr>
            <tr>
                <th>VersionActuelle</th>
                <td>{{ produit.versionActuelle }}</td>
            </tr>
            <tr>
                <th>TypeLicence</th>
                <td>{{ produit.typeLicence }}</td>
            </tr>
            <tr>
                <th>DateCreation</th>
                <td>{{ produit.dateCreation ? produit.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DateDerniereMiseAJour</th>
                <td>{{ produit.dateDerniereMiseAJour ? produit.dateDerniereMiseAJour|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ produit.statut ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.prix }}</td>
            </tr>
            <tr>
                <th>ModulesInclus</th>
                <td>{{ produit.modulesInclus ? produit.modulesInclus|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>ConditionsUtilisation</th>
                <td>{{ produit.conditionsUtilisation }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_produit_index') }}">back to list</a>

    <a href="{{ path('app_produit_edit', {'id': produit.id}) }}">edit</a>

    {{ include('produit/_delete_form.html.twig') }}
{% endblock %}
