{% extends 'base.html.twig' %}

{% block title %}Inscription Utilisateur{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center" style="color:rgb(105, 175, 255); font-family: 'Arial', sans-serif; margin-bottom: 30px;">Créer un compte</h1>

    {{ form_start(form, {'attr': {'class': 'form-inscription'}}) }}

    {% if form.vars.errors|length > 0 %}
        <div class="alert alert-danger mb-4">
            <h5 class="alert-heading">Erreurs à corriger :</h5>
            <ul class="mb-0">
                {% for error in form.vars.errors %}
                    <li>{{ error.message }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}

    <div class="form-group">
        <label for="{{ form.email.vars.id }}" class="form-label">Adresse Email</label>
        {{ form_widget(form.email, {'attr': {
            'class': 'form-control rounded-pill shadow-sm',
            'placeholder': 'exemple@domaine.com'
        }}) }}
        {{ form_errors(form.email) }}
        <small class="form-text text-muted">Votre email de connexion</small>
    </div>

    <div class="form-group">
        <label for="{{ form.username.vars.id }}" class="form-label">Nom Complet</label>
        {{ form_widget(form.username, {'attr': {
            'class': 'form-control rounded-pill shadow-sm',
            'placeholder': 'Prénom et Nom'
        }}) }}
        {{ form_errors(form.username) }}
    </div>

    <div class="form-group">
        <label for="{{ form.password.vars.id }}" class="form-label">Mot de Passe</label>
        {{ form_widget(form.password, {'attr': {
            'class': 'form-control rounded-pill shadow-sm',
            'placeholder': '••••••••'
        }}) }}
        {{ form_errors(form.password) }}
        <small class="form-text text-muted">8 caractères minimum</small>
    </div>

    <div class="form-group">
        <label for="{{ form.confirm_password.vars.id }}" class="form-label">Confirmation</label>
        {{ form_widget(form.confirm_password, {'attr': {
            'class': 'form-control rounded-pill shadow-sm',
            'placeholder': 'Retaper votre mot de passe'
        }}) }}
        {{ form_errors(form.confirm_password) }}
    </div>

    <div class="form-group mt-4">
        <button type="submit" class="btn btn-primary rounded-pill w-100 shadow-sm py-3">
            <i class="fas fa-user-plus mr-2"></i> S'inscrire
        </button>
    </div>

    {{ form_end(form) }}
</div>

<style>
    .form-inscription {
        max-width: 500px;
        margin: 0 auto;
        padding: 2rem;
        background: white;
        border-radius: 15px;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.08);
    }
    .form-group {
        margin-bottom: 1.5rem;
    }
    .form-control {
        padding: 12px 20px;
        border: 2px solid #e9ecef;
        transition: all 0.3s;
    }
    .form-control:focus {
        border-color: rgb(105, 175, 255);
        box-shadow: 0 0 0 0.2rem rgba(105, 175, 255, 0.25);
    }
    .btn-primary {
        background: linear-gradient(135deg, rgb(105, 175, 255), rgb(64, 96, 240));
        border: none;
        font-weight: 600;
        letter-spacing: 0.5px;
    }
    .btn-primary:hover {
        background: linear-gradient(135deg, rgb(85, 155, 235), rgb(44, 76, 220));
    }
    .alert-danger {
        background-color: #fff3f3;
        border-left: 4px solid #ff6b6b;
    }
</style>
{% endblock %}
