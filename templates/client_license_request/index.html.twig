{% extends 'base.html.twig' %}

{% block title %}Nouvelle demande de licence{% endblock %}

{% block body %}
<div class="container mt-5">
    <h2>Faire une demande de licence</h2>

    {% for label, messages in app.flashes %}
        <div class="alert alert-{{ label }}">{{ messages|first }}</div>
    {% endfor %}

    {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.product) }}
            {{ form_widget(form.product, { 'attr': { 'class': 'form-control' } }) }}
        </div>
        <div class="form-group">
            {{ form_label(form.requestType) }}
            {{ form_widget(form.requestType, { 'attr': { 'class': 'form-control' } }) }}
        </div>
        <div class="form-group">
            {{ form_label(form.startDate) }}
            {{ form_widget(form.startDate, { 'attr': { 'class': 'form-control' } }) }}
        </div>
        <div class="form-group">
            {{ form_label(form.endDate) }}
            {{ form_widget(form.endDate, { 'attr': { 'class': 'form-control' } }) }}
        </div>
        <div class="form-group">
            {{ form_label(form.message) }}
            {{ form_widget(form.message, { 'attr': { 'class': 'form-control' } }) }}
        </div>

        <button class="btn btn-primary">Envoyer la demande</button>
    {{ form_end(form) }}
</div>
{% endblock %}
