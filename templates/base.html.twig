<!DOCTYPE html>    
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Découvrez nos services professionnels et personnalisés.">
    <title>{% block title %}Twinkle IT - Votre Partenaire Digital{% endblock %}</title>
    
    <!-- Font Awesome for Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://bootswatch.com/5/flatly/bootstrap.min.css">

    <!-- Custom Styles -->
    <style>
       
        .navbar {
            background: #ffffff; /* Blanc pur */
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            padding: 12px 20px;
        }

        .navbar-brand img {
            height: 55px; /* Taille optimisée */
            margin-right: 10px;
        }

        .navbar-brand {
            font-size: 1.6rem;
            font-weight: bold;
            color: #003366; /* Bleu foncé */
            display: flex;
            align-items: center;
        }

        .navbar-brand:hover {
            color: #0056b3;
        }

     
        .navbar-nav .nav-link {
            font-size: 1.1rem;
            color: #003366;
            transition: all 0.3s ease;
            padding: 10px 15px;
            border-radius: 5px;
        }

        .navbar-nav .nav-link:hover {
            color: #0056b3;
            background: rgba(0, 86, 179, 0.1);
        }

        .btn-primary {
            background-color: #0056b3;
            border-radius: 25px;
            padding: 10px 25px;
            border: none;
            font-weight: bold;
            transition: background-color 0.3s ease, box-shadow 0.3s ease;
        }

        .btn-primary:hover {
            background-color: #003366;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }

       
        body {
            background: #f5f5f5;
            font-family: 'Poppins', sans-serif;
        }

        h1 {
            color: #003366;
            font-size: 3rem;
            font-weight: bold;
            margin-bottom: 20px;
            text-align: center;
        }
    </style>

    {% block stylesheets %}{% endblock %}
</head>
<body>

 
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('app_home') }}">
                <img src="{{ asset('uploads/twinkle.jpg') }}" alt="Twinkle IT Logo">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" 
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('service_list') }}">Nos Services</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('about_page') }}">À Propos</a> <!-- Section À Propos -->
                    </li>
                    {% if app.user %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('new_service') }}">Ajouter un service</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('new_category') }}">Ajouter une catégorie</a>
                        </li>
                    {% endif %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('category_list') }}">Catégories</a>
                    </li>
                </ul>

                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_home') }}">Accueil</a>
                    </li>

                    {% if app.user %}
                        <li class="nav-item">
                            <a href="{{ path('security_logout') }}" class="btn btn-primary">Déconnexion</a>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a href="{{ path('security_login') }}" class="btn btn-outline-primary">Connexion</a>
                        </li>
                        <li class="nav-item">
                            {% if app.request and app.request.attributes.get('_route') != 'security_registration' %}
                                <a href="{{ path('security_registration') }}" class="btn btn-primary ms-2">Inscription</a>
                            {% endif %}
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>
    <div class="container mt-4">
        {% block body %}{% endblock %}
    </div>

    {% block javascripts %}
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
    {% endblock %}
</body>
</html>
