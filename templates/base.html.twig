<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="D√©couvrez nos services professionnels et personnalis√©s.">
    <title>{% block title %}Twinkle IT - Votre Partenaire Digital{% endblock %}</title>

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

    <style>
        /* Styles personnalis√©s */
        .header {
            background: #ffffff;
            padding: 10px 20px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .header-buttons {
            display: flex;
            gap: 15px;
        }

        .btn-login {
            background-color: #2F93B9;
            color: white;
            border-radius: 25px;
            padding: 10px 25px;
            font-size: 1rem;
            font-weight: bold;
            text-decoration: none;
            transition: all 0.3s ease-in-out;
            box-shadow: 0 3px 6px rgba(0, 0, 0, 0.15);
        }

        .btn-login:hover {
            background-color: #003366;
            transform: scale(1.05);
        }

        .btn-contact {
            background-color: #2AB572;
            color: white;
            border-radius: 25px;
            padding: 10px 25px;
            font-size: 1rem;
            font-weight: bold;
            text-decoration: none;
            transition: all 0.3s ease-in-out;
            box-shadow: 0 3px 6px rgba(103, 101, 101, 0.15);
        }

        .btn-contact:hover {
            background-color: rgb(66, 186, 138);
            transform: scale(1.05);
        }

        .navbar {
            background: rgba(255, 255, 255, 0.58);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .navbar-nav .nav-item .nav-link {
            color: #003366;
            font-size: 1.1rem;
            padding: 10px 15px;
            transition: all 0.3s ease-in-out;
        }

        .navbar-nav .nav-item .nav-link:hover {
            color: rgb(132, 203, 253);
        }

        .navbar-nav .dropdown-menu {
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            background-color: #ffffff;
        }

        .footer {
            background: linear-gradient(45deg, #2F93B9, #6EB05B);
            color: white;
            text-align: center;
            padding: 20px;
            margin-top: 50px;
        }

        .footer .social-icons a {
            color: white;
            margin: 0 10px;
            font-size: 1.5rem;
            transition: 0.3s;
        }

        .footer .social-icons a:hover {
            color: #E3F2FD;
        }

        .nav-item.dropdown .nav-link.admin-menu {
            color: #dc3545 !important;
            font-weight: bold;
        }

        .nav-item.dropdown .nav-link.admin-menu:hover {
            color: #ff6b6b !important;
        }

        .dropdown-item i {
            margin-right: 8px;
            width: 20px;
            text-align: center;
        }

        .table-hover tbody tr:hover {
            background-color: rgba(0, 128, 255, 0.1);
        }

        .card {
            border-radius: 10px;
            background-color: #f8f9fa;
        }

        .btn {
            border-radius: 5px;
        }

        body {
            background-color: #f5f7fa;
            color: #333;
        }

        .table {
            background: white;
            border-radius: 10px;
            overflow: hidden;
        }

        .table th {
            background-color: #2a9d8f;
            color: white;
        }

        .table-hover tbody tr:hover {
            background-color: rgba(42, 157, 143, 0.1);
        }

        .btn-custom {
            background-color: #0077b6;
            color: white;
            border-radius: 5px;
            padding: 5px 10px;
            text-decoration: none;
        }

        .btn-custom:hover {
            background-color: #005f86;
        }

        .btn-create {
            background-color: #2a9d8f;
            color: white;
        }
    </style>

    {% block stylesheets %}{% endblock %}
</head>
<body>

    <!-- üåü Header -->
    <header class="header">
        <a class="navbar-brand" href="{{ path('app_home') }}">
            <img src="{{ asset('uploads/twinkle.jpg') }}" alt="Twinkle IT Logo" height="50">
        </a>
        <div class="header-buttons">
            {% if not app.user %}
                <a href="{{ path('security_login') }}" class="btn btn-login">Connexion</a>
                <a href="{{ path('client_login') }}" class="btn btn-login">Connexion client</a>
                <a href="{{ path('contact') }}" class="btn btn-contact">Nous contacter</a>
            {% else %}
                <a href="{{ path('security_logout') }}" class="btn btn-login">D√©connexion</a>
            {% endif %}
        </div>
    </header>

    <!-- üåü Navbar -->
    <nav class="navbar navbar-expand-lg">
        <div class="container">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="{{ path('app_home') }}#notre-entreprise" role="button"
                           data-bs-toggle="dropdown" aria-expanded="false">
                            Accueil
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="{{ path('app_home') }}#notre-entreprise">Bienvenue dans Notre Entreprise</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="aboutDropdown" role="button"
                           data-bs-toggle="dropdown" aria-expanded="false">
                            √Ä Propos
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="aboutDropdown">
                            <li><a class="dropdown-item" href="{{ path('about_page') }}#notre-entreprise">Notre Entreprise</a></li>
                            <li><a class="dropdown-item" href="{{ path('about_page') }}#nos-valeurs">Nos Valeurs</a></li>
                            <li><a class="dropdown-item" href="{{ path('about_page') }}#notre-equipe">Notre √âquipe</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="{{ path('app_produit_index') }}" id="produitsDropdown" role="button"
                           data-bs-toggle="dropdown" aria-expanded="false">
                            Nos Produits
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="{{ path('app_produit_index') }}">Tous les produits</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="{{ path('category_list') }}" role="button"
                           data-bs-toggle="dropdown" aria-expanded="false">
                            Cat√©gories
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="{{ path('category_list') }}">Voir les cat√©gories</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- üåü Flash messages -->
    <div class="container mt-3">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">{{ message }}</div>
            {% endfor %}
        {% endfor %}
    </div>

    <!-- üåü Main Content -->
    <div class="container mt-4">
        {% block body %}{% endblock %}
    </div>

    <!-- üåü Footer -->
    <footer class="footer">
        <p>&copy; {{ "now"|date("Y") }} Twinkle IT - Tous droits r√©serv√©s</p>
        <div class="social-icons">
            <a href="https://facebook.com" target="_blank"><i class="fab fa-facebook"></i></a>
            <a href="https://twitter.com" target="_blank"><i class="fab fa-twitter"></i></a>
            <a href="https://linkedin.com" target="_blank"><i class="fab fa-linkedin"></i></a>
        </div>
    </footer>

    {% block javascripts %}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                let dropdowns = document.querySelectorAll(".dropdown-toggle");
                dropdowns.forEach(dropdown => {
                    new bootstrap.Dropdown(dropdown);
                });
            });
        </script>
    {% endblock %}
</body>
</html>
