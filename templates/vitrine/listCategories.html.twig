{% extends 'base.html.twig' %}

{% block title %}Nos Catégories de services {% endblock %}

{% block body %}
<div class="container my-5 p-4" style="background-color: #f8f9fa; border-radius: 20px; box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);">
    <h1 class="text-center mb-5" style="color: #114282; font-family: 'Poppins', sans-serif; font-size: 2.5rem;">
        Nos Catégories
    </h1>
    {% if categories is not empty %}
        <div class="row">
            {% for category in categories %}
                <div class="col-md-4 mb-4">
                    <div class="card category-card">
                        <div class="card-body text-center">
                            <h5 class="card-title">{{ category.titre }}</h5>
                            <p class="card-text">{{ category.description }}</p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="alert alert-warning text-center">
            Aucune catégorie disponible pour le moment.
        </div>
    {% endif %}
</div>

<style>
    .category-card {
        border: none;
        border-radius: 15px;
        background-color: #e3f2fd; /* Bleu clair */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
    }

    .category-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
    }

    .card-title {
        color: #3171d4; /* Bleu foncé */
        font-weight: bold;
        font-size: 1.5rem;
    }

    .card-text {
        color: #4a90e2; /* Bleu moyen */
        font-size: 1rem;
        line-height: 1.6;
    }
</style>

{% endblock %}
