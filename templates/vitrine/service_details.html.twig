{% extends 'base.html.twig' %}

{% block title %}D√©tails du Produit{% endblock %}

{% block body %}
<div class="container my-5 p-4" 
     style="background-color: #ffffff; border-radius: 15px; box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1); max-width: 850px;">
    
    <h1 class="text-center mb-3" 
        style="color: #3871b1; font-family: 'Poppins', sans-serif; font-weight: 700; font-size: 2.2rem;">
         {{ produit.name }}
    </h1>

    <p class="text-center text-muted" style="font-size: 1.1rem;">
        D√©couvrez nos services professionnels et personnalis√©s pour booster votre projet.
    </p>

    <hr style="border-top: 2px solid #3871b1;">

    <!-- üåü Image du service -->
    {% if produit.image %}
        <div class="text-center mb-4">
            <img src="{{ asset('uploads/produits/' ~ produit.image)  }}" alt="Illustration de {{ produit.name }}" 
                 class="img-fluid rounded shadow-lg img-animated" style="max-width: 100%; height: auto;">
        </div>
    {% endif %}

    <!-- üåü Description du produit -->
    

    <!-- üåü Version Actuelle -->
    <div class="content">
        <p style="font-size: 1.2rem; line-height: 1.6; text-align: justify; color: #333;">
            Version actuelle: {{ produit.versionActuelle }}
        </p>
    </div>

    <!-- üåü Type de Licence -->
    <div class="content">
        <p style="font-size: 1.2rem; line-height: 1.6; text-align: justify; color: #333;">
            Type de Licence: {{ produit.typeLicence }}
        </p>
    </div>

    <!-- üåü Date de Cr√©ation -->
    <div class="content">
        <p style="font-size: 1.2rem; line-height: 1.6; text-align: justify; color: #333;">
            Date de Cr√©ation: {{ produit.dateCreation|date('d/m/Y H:i') }}
        </p>
    </div>

    <!-- üåü Date de Derni√®re Mise √† Jour -->
    <div class="content">
        <p style="font-size: 1.2rem; line-height: 1.6; text-align: justify; color: #333;">
            Derni√®re Mise √† Jour: {{ produit.dateDerniereMiseAJour|date('d/m/Y H:i') }}
        </p>
    </div>

    <!-- üåü Statut (Produit Actif) -->
    <div class="content">
        <p style="font-size: 1.2rem; line-height: 1.6; text-align: justify; color: #333;">
            Statut: {{ produit.statut ? 'Actif' : 'Inactif' }}
        </p>
    </div>

    <!-- üåü Prix -->
    <div class="content">
        <p style="font-size: 1.2rem; line-height: 1.6; text-align: justify; color: #333;">
            Prix: {{ produit.prix | number_format(2, ',', ' ') }} ‚Ç¨
        </p>
    </div>

    <!-- üåü Cat√©gorie -->
    <div class="content">
        <p style="font-size: 1.2rem; line-height: 1.6; text-align: justify; color: #333;">
            Cat√©gorie: {{ produit.category.titre }}
        </p>
    </div>

    <!-- üåü Bouton de contact -->
    <div class="text-center mt-4">
        <a href="{{ path('contact') }}" class="btn btn-primary btn-lg shadow-sm"
           style="background-color: #3871b1; border: none; padding: 14px 35px; font-size: 1.2rem; border-radius: 8px; cursor: pointer;">
             Nous contacter
        </a>
    </div>

    {% if is_granted('ROLE_ADMIN') %}
    <div class="text-center mt-4">
        <a href="{{ path('app_produit_edit', {'id': produit.id}) }}" class="btn btn-warning btn-lg shadow-sm" style="margin-right: 10px;">
            Modifier
        </a>
        <a href="{{ path('app_produit_delete', {'id': produit.id}) }}" class="btn btn-danger btn-lg shadow-sm">
            Supprimer
        </a>
    </div>
{% endif %}


</div>

<!-- üåü Styles personnalis√©s -->
<style>
    .img-animated {
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
    }
    .img-animated:hover {
        transform: scale(1.05);
        box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.3);
    }

    .btn-primary:hover {
        background-color: #285a8e;
        transition: 0.3s;
    }
</style>

{% endblock %}
