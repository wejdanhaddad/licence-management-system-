{% extends 'base.html.twig' %}

{% block title %}Ajouter un Service{% endblock %}

{% block body %}
<div class="container my-5 p-4" 
     style="background: #ffffff; border-radius: 12px; box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1); max-width: 600px;">
    
    <h1 class="text-center mb-4" 
        style="color: #075f5e; font-family: 'Poppins', sans-serif; font-weight: 600; font-size: 2rem;">
        Ajouter un Nouveau Service
    </h1>

    <!-- Formulaire -->
    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    <div class="mb-3">
        {{ form_row(form.name, {
            'attr': {'class': 'form-control', 'placeholder': 'Nom du service'}
        }) }}
    </div>
    <div class="mb-3">
        {{ form_row(form.description, {
            'attr': {'class': 'form-control', 'placeholder': 'Description du service'}
        }) }}
    </div>
    
    <div class="text-center mt-4">
        <button type="submit" class="btn btn-primary" 
                style="background-color: #075f5e; border: none; border-radius: 8px; padding: 12px 30px; font-size: 1.1rem;">
            <i class="fas fa-plus-circle"></i> Ajouter
        </button>
    </div>
    {{ form_end(form) }}
</div>

<!-- Style personnalisÃ© -->
<style>
    .form-control {
        border-radius: 8px;
        border: 1px solid #ddd;
        padding: 12px;
        font-size: 1rem;
        transition: all 0.3s ease-in-out;
    }

    .form-control:focus {
        border-color: #075f5e;
        box-shadow: 0 0 5px rgba(7, 95, 94, 0.2);
    }

    .btn-primary:hover {
        background-color: #064d4c;
        transition: 0.3s;
    }
</style>

{% endblock %}
