{% extends 'base.html.twig' %}

{% block title %}üìä Tableau de Bord - Admin{% endblock %}

{% block body %}
<style>
    .dashboard-container {
        background: linear-gradient(to right, #e3f2fd, #ffffff);
        border-radius: 15px;
        padding: 30px;
        box-shadow: 0 10px 20px rgba(0,0,0,0.05);
    }

    .dashboard-title {
        font-size: 2rem;
        font-weight: bold;
        color: #2F93B9;
        margin-bottom: 2rem;
        border-bottom: 2px solid #2F93B9;
        padding-bottom: 10px;
    }

    .card {
        border: none;
        border-radius: 15px;
        transition: transform 0.2s ease-in-out;
    }

    .card:hover {
        transform: scale(1.02);
    }

    .card .card-title {
        color: #2F93B9;
        font-weight: 600;
    }

    .card .display-4 {
        color: #2AB572;
        font-weight: bold;
    }

    .btn-outline-primary {
        border-color: #2F93B9;
        color: #2F93B9;
    }

    .btn-outline-primary:hover {
        background-color: #2F93B9;
        color: white;
    }

    .btn-outline-success {
        border-color: #2AB572;
        color: #2AB572;
    }

    .btn-outline-success:hover {
        background-color: #2AB572;
        color: white;
    }

    .btn-outline-warning {
        border-color: #f5a623;
        color: #f5a623;
    }

    .btn-outline-warning:hover {
        background-color: #f5a623;
        color: white;
    }
</style>

<div class="container mt-5 dashboard-container">
    <h1 class="text-center dashboard-title">Tableau de bord de l'administrateur</h1>

    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="card-title">üë• Utilisateurs</h3>
                    <p class="display-4">{{ nbUsers }}</p>
                    <a href="{{ path('admin_users') }}" class="btn btn-outline-primary">G√©rer les utilisateurs</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="card-title">üîê Licences</h3>
                    <p class="display-4">{{ nbLicenses }}</p>
                    <a href="{{ path('admin_licenses') }}" class="btn btn-outline-success">G√©rer les licences</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="card-title">üí∞ Revenus</h3>
                    <p class="display-4">{{ revenus|number_format(2, '.', ' ') }} TND</p>
                    <a href="{{ path('admin_paiements') }}" class="btn btn-outline-warning">Voir les paiements</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
